# ============================================
# MODE CONFIGURATION
# ============================================
# Set to true for paper trading (NO real orders)
DRY_RUN=true

# Starting balance for paper trading (in USDT). Only used when DRY_RUN=true.
# Set to 0 to use your real exchange balance as starting point.
SIMULATED_BALANCE=2000

# ============================================
# EXCHANGE CONFIGURATION
# ============================================
EXCHANGE_ID=binance
EXCHANGE_API_KEY=your_api_key
EXCHANGE_SECRET=your_secret

# ⚠️ IMPORTANT: Binance deprecated testnet for FUTURES.
# If EXCHANGE_SANDBOX=true, the bot will use SPOT market instead.
# For futures paper trading, set:
#   - EXCHANGE_SANDBOX=false 
#   - DRY_RUN=true (simulates orders without sending to exchange)
# Or use Binance Demo Trading API keys (separate from testnet).
EXCHANGE_SANDBOX=false

# ============================================
# TRADING CONFIGURATION
# ============================================
TRADING_PAIR=BTC/USDT

# Position size as percentage of available capital (1-100)
POSITION_SIZE_PERCENT=5

# ============================================
# WATCHMAN (REGIME DETECTION) SETTINGS
# ============================================
# ADX period for regime detection
ADX_PERIOD=14

# Hysteresis thresholds (anti-whipsaw)
# Switch to TRENDING when ADX > ADX_TREND_START
ADX_TREND_START=25
# Return to RANGING when ADX < ADX_RANGE_RETURN
ADX_RANGE_RETURN=20

# Cooldown after regime change (seconds)
REGIME_COOLDOWN_SECONDS=900

# ============================================
# MEAN REVERSION STRATEGY SETTINGS
# ============================================
# Timeframe for mean reversion
MEAN_REVERSION_TIMEFRAME=15m

# Bollinger Bands
BB_PERIOD=20
BB_STD_DEV=2

# RSI
RSI_PERIOD=14
RSI_OVERSOLD=30
RSI_OVERBOUGHT=70

# ATR for Stop Loss
ATR_PERIOD=14
ATR_SL_MULTIPLIER=1.5

# ============================================
# TREND SNIPER STRATEGY SETTINGS
# ============================================
# Timeframe for trend following
TREND_TIMEFRAME=1h

# Donchian Channel
DONCHIAN_PERIOD=20

# EMA filter
EMA_PERIOD=200

# ============================================
# RISK MANAGEMENT
# ============================================
# Minimum expected profit (after fees) to enter trade
MIN_PROFIT_THRESHOLD=0.002

# Maximum drawdown before stopping bot (as decimal, e.g., 0.1 = 10%)
MAX_DRAWDOWN=0.1

# ============================================
# TIMING
# ============================================
# Main loop interval in seconds
LOOP_INTERVAL_SECONDS=60

# ============================================
# LOGGING & DATABASE
# ============================================
LOG_LEVEL=INFO
LOG_FILE=data/bot_activity.log

# SQLite database path
DATABASE_PATH=data/bot_data.db
